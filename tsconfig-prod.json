{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "incremental": true,
        "baseUrl": ".",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.jest.ts",
        "test/",
        "node_modules"
    ]
}