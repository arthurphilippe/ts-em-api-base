{
    "name": "ts-em-api-base",
    "version": "1.1.2",
    "description": "Base for a typescript, express and mongodb web API",
    "main": "dist/index.js",
    "author": "Arthur C. Philippe",
    "license": "MIT",
    "scripts": {
        "build": "tsc --declaration --declarationMap -p tsconfig-prod.json",
        "start": "tsc -p tsconfig-prod.json && node -r tsconfig-paths/register dist/index.js",
        "build:check": "tsc --noEmit -p tsconfig-prod.json",
        "test": "jest"
    },
    "dependencies": {
        "express": "^4.17.1",
        "mongoose": "^5.7.12",
        "tsconfig-paths": "^3.9.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.2",
        "@types/jest": "^24.0.23",
        "@types/mongoose": "^5.5.32",
        "jest": "^24.9.0",
        "jest-junit": "^9.0.0",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.2",
        "typescript": "^3.7.2"
    },
    "files": [
        "dist/**/*"
    ],
    "jest": {
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "coverageReporters": [
            "html",
            "json"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ],
        "testEnvironment": "node"
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": "./reports/jest",
        "outputName": "junit.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
    }
}
